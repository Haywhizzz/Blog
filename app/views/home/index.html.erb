<div class="row container-fluid h-100 m-0  best-section">
    <% @articles.each do |a|%>
    <div class=" card col-lg-12 col-md-12 col-sm-12 col-xs-12  border-0">
    <%= image_tag a.image.url, class:"img-fluid hv-100" %>
    <div class="card-img-overlay  text-white d-flex d-flex align-items-end mt-auto h-25 ">
<%= link_to a.title, article_path(a), class:"text-orange font-weight-bold w-50 h-50 ml-5 mt-2 p-3 "%>
</div>
</div>
<%end%>
</div>
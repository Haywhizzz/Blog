<div class="w-100 d-flex flex-column align-items-center py-2 container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'form-control margin-100 field-width', placeholder: "Enter name", autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control margin-100 field-width', placeholder: "Enter email", autofocus: true, autocomplete: "email" %>
  </div>


  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: 'form-control margin-100 field-width', placeholder: "Enter password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-outline-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
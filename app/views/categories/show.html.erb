<div class="container col-12 show-cate">
      <div class="row d-flex ">
            <% @category.articles.by_most_recent.each do |c| %>
         <div class="col-md-3 mb-5">
            
               <%= image_tag c.image.url, class:" img-fluid" %>
         </div>
    
        <div class="col-md-3">

          <%= link_to c.title, article_path(c), class:"h3 show-title"%>
          <hr>
          <p>  <%= c.content.first(80) %></p>
           <%= link_to "SEE MORE ", article_path(c), class:" card-link small"%>

        </div>
       <%end%>
      </div>

